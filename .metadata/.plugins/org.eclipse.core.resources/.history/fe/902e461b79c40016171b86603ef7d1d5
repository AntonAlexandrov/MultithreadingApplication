package algorithm.sort;

import java.util.ArrayList;
import java.util.List;

public class BubbleSort extends Thread{
	Thread t;
	String threadName;
	List<Integer> intList;
	
	public BubbleSort(String threadName, List<Integer> intList){
		this.threadName = threadName;
		this.intList = new ArrayList<Integer>(intList); //copy the given list, so we can sort the new one
		System.out.println("Creating " + threadName);
	}
	
	public void run(){
		System.out.println("Running: " + threadName);
		System.out.println("The list is: " + intList);
		
		int size = intList.size(); //precalculate
		boolean swap = true;
		
		while(swap){
			swap = false;
			for(int i = 0; i < size; i++){
				Integer tmp;
				
				if(intList.get(i) < intList.get(size-i-1)){
					tmp = intList.get(i);
					intList.set(i, intList.get(size-i-1));
					intList.set(size-i-1, tmp);
					/*swap*/
					swap = true;
				}
			}
		}
		
		System.out.println("The sorted list is: " + intList);
		System.out.println("Exiting " + threadName);
	}
	
	public void start(){
		System.out.println("Starting: " + threadName);
		
		if(t == null){
			t = new Thread(this, threadName);
			t.start();
		}
	}
}
